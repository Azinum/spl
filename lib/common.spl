// common.spl
// platform independed common/standard library

include "lib/linux.spl"

fn strlen(any str) {
  let length 0;
  while < 0 load8 str {
    = @length +1 length;
    = @str +1 str;
  }
  length;
}

fn memset(any ptr, u64 c, u64 n) {
  let count 0;
  while < count n {
    store8 ptr c;
    = @ptr   +1 ptr;
    = @count +1 count;
  }
}
